PUT _ingest/pipeline/ece-json
{
  "description": "ECE Proxy version: 10002",
  "processors": [
    { "set": { "field": "timestamp_ingest", "value": "{{ _ingest.timestamp }}" }},
    {
      "grok": {
        "field": "source",
        "patterns": [
          "\\/(?<metadata.diag_name>ece_diag_.*?_\\d{2}_[A-Za-z]{3}_\\d{4}_\\d{2}_\\d{2}_\\d{2})(?<metadata.file>\\/elastic\\/(?<ece.runner>.*?)\\/services\\/.*?\\/(containers\\/(elasticsearch|kibana)\\/(?<ece.cluster_id>.*?)\\/(?<ece.container>.*?)\\/)?.*$)"
        ],
        "on_failure": [
          { "set": { "field": "error", "value": "filepath_parse_failure" }}
        ]
      }
    },
    { "remove": { "field": "source" }},
    { "rename": { "field": "metadata", "target_field": "@metadata" }},
    { "rename": { "field": "offset", "target_field": "@metadata.offset" }},
    { "set": { "if": "ctx.handling_cluster != null", "field": "ece.cluster_id", "value": "{{ handling_cluster }}" }},
    { "set": { "if": "ctx.handling_instance != null", "field": "ece.container", "value": "{{ handling_instance }}" }}
  ]
}
